{
  "name": "@zoptal/service-mesh",
  "version": "1.0.0",
  "description": "Service mesh utilities and gRPC definitions for Zoptal platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run generate:grpc",
    "dev": "tsc --watch",
    "generate:grpc": "npm run generate:protos && npm run generate:clients",
    "generate:protos": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin --proto_path=./src/grpc/protos ./src/grpc/protos/*.proto",
    "generate:clients": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=grpc_js:./src/generated --proto_path=./src/grpc/protos ./src/grpc/protos/*.proto",
    "clean": "rm -rf dist/ src/generated/",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": ["grpc", "service-mesh", "microservices", "zoptal"],
  "author": "Zoptal Team",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "google-protobuf": "^3.21.2",
    "protobufjs": "^7.2.5"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.12",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "grpc-tools": "^1.12.4",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "jest": "^29.7.0",
    "protoc-gen-ts": "^0.8.7",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/",
    "src/generated/",
    "src/grpc/protos/"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}