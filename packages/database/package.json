{
  "name": "@zoptal/database",
  "version": "0.1.0",
  "description": "Database schemas and migrations for Zoptal",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.esm.js",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist",
    "prisma",
    "README.md"
  ],
  "scripts": {
    "build": "prisma generate && tsup src/index.ts src/client.ts --format cjs,esm --dts",
    "build:watch": "tsup src/index.ts src/client.ts --format cjs,esm --dts --watch",
    "dev": "prisma generate && tsup src/index.ts src/client.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "database",
    "prisma",
    "migrations",
    "schemas",
    "zoptal"
  ],
  "author": "Zoptal Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "prisma": "^5.9.1",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}