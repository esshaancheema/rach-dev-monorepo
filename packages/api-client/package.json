{
  "name": "@zoptal/api-client",
  "version": "1.0.0",
  "description": "Zoptal API client for accessing microservices",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --dts --external react --watch",
    "clean": "rm -rf dist node_modules/.cache",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zoptal/types": "workspace:*",
    "axios": "^1.6.0",
    "qs": "^6.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/qs": "^6.9.0",
    "@types/react": "^19.1.9",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}