{
  "name": "@zoptal/auth-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "retention:start": "tsx scripts/data-retention-scheduler.ts start",
    "retention:cleanup": "tsx scripts/data-retention-scheduler.ts cleanup",
    "retention:stats": "tsx scripts/data-retention-scheduler.ts stats",
    "retention:health": "tsx scripts/data-retention-scheduler.ts health",
    "retention:preview": "tsx scripts/data-retention-scheduler.ts preview",
    "retention:report": "tsx scripts/data-retention-scheduler.ts report",
    "security:audit": "node scripts/security-audit.js",
    "security:pentest": "node scripts/penetration-test.js",
    "security:test": "npm run security:audit && npm run security:pentest",
    "perf:smoke": "scripts/performance/run-performance-tests.sh smoke",
    "perf:load": "scripts/performance/run-performance-tests.sh load",
    "perf:stress": "scripts/performance/run-performance-tests.sh stress",
    "perf:spike": "scripts/performance/run-performance-tests.sh spike",
    "perf:endurance": "scripts/performance/run-performance-tests.sh endurance",
    "perf:test": "scripts/performance/run-performance-tests.sh load --duration 3m --vus 25"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@octokit/rest": "^20.0.2",
    "@sendgrid/mail": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-forge": "^1.3.14",
    "@types/xmldom": "^0.1.34",
    "@zoptal/database": "workspace:*",
    "archiver": "^6.0.1",
    "argon2": "^0.31.2",
    "axios": "^1.11.0",
    "cron": "^3.1.6",
    "dotenv": "^17.2.1",
    "fastify": "^4.25.0",
    "fastify-plugin": "^4.5.1",
    "googleapis": "^128.0.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "oidc-provider": "^9.4.1",
    "openid-client": "^6.6.4",
    "pino": "^8.17.0",
    "qrcode": "^1.5.3",
    "saml2-js": "^4.0.4",
    "sharp": "^0.33.0",
    "speakeasy": "^2.0.0",
    "twilio": "^4.20.0",
    "xmldom": "^0.6.0",
    "xmldsig": "^0.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/cron": "^2.0.1",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@zoptal/eslint-config": "workspace:*",
    "@zoptal/tsconfig": "workspace:*",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  }
}