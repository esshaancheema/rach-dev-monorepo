{
  "name": "@zoptal/graphql-gateway",
  "version": "1.0.0",
  "description": "GraphQL API Gateway for Zoptal Platform - Unified data access layer",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "generate": "graphql-codegen --config codegen.yml",
    "playground": "graphql-playground --endpoint http://localhost:4000/graphql"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@apollo/gateway": "^2.5.5",
    "@apollo/subgraph": "^2.5.5",
    "@apollo/federation": "^0.38.1",
    "apollo-server-express": "^3.12.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tools": "^9.0.0",
    "graphql-scalars": "^1.22.4",
    "dataloader": "^2.2.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-rate-limit": "^3.3.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "@types/uuid": "^9.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "graphql-playground-middleware-express": "^1.7.23"
  },
  "keywords": [
    "graphql",
    "api-gateway",
    "apollo-federation",
    "microservices",
    "zoptal",
    "typescript"
  ],
  "author": "Zoptal Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}