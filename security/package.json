{
  "name": "@zoptal/security-testing-suite",
  "version": "1.0.0",
  "description": "Comprehensive security testing suite for Zoptal Platform",
  "main": "index.js",
  "scripts": {
    "audit": "./scripts/run-security-audit.sh",
    "pentest": "./scripts/run-penetration-tests.sh",
    "api-test": "python3 scripts/api-security-tests.py",
    "auth-test": "node scripts/auth-security-tests.js",
    "report": "python3 scripts/generate-security-report.py",
    "install:tools": "npm run install:zap && npm run install:nuclei && npm run install:python-deps",
    "install:zap": "echo 'Please install OWASP ZAP from https://www.zaproxy.org/download/'",
    "install:nuclei": "go install -v github.com/projectdiscovery/nuclei/v2/cmd/nuclei@latest || echo 'Please install Go to use Nuclei'",
    "install:python-deps": "pip3 install -r requirements.txt",
    "test:demo": "npm run audit -- --target-url http://localhost:3000 --skip-infrastructure",
    "test:staging": "npm run audit -- --target-url https://staging.zoptal.com --comprehensive",
    "test:ci": "npm run audit -- --target-url $TARGET_URL --output-format json --quiet"
  },
  "keywords": [
    "security",
    "penetration-testing",
    "vulnerability-scanning",
    "owasp",
    "security-audit",
    "web-security",
    "api-security"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "node-forge": "^1.3.1",
    "puppeteer": "^21.5.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zoptal/security-testing-suite.git"
  },
  "author": "Zoptal Security Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoptal/security-testing-suite/issues"
  },
  "homepage": "https://github.com/zoptal/security-testing-suite#readme"
}